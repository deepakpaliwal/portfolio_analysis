# ============================================================
# Portfolio Analysis - Environment Configuration
# Copy to .env and adjust values for your environment.
# ============================================================

# Active Spring profile: local | dev | cat | prod
PROFILE=local

# Database (used by dev/cat/prod profiles)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_dev
DB_USERNAME=portfolio
DB_PASSWORD=portfolio

# Application ports
API_PORT=8080
UI_PORT=80
BATCH_PORT=8082

# Security
JWT_SECRET=change-this-in-production-must-be-at-least-256-bits-long

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Spark (batch module)
SPARK_MASTER=local[*]
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g

# Batch schedule (cron expression)
BATCH_SCHEDULE_ANALYSIS=0 0 2 * * *
