# ============================================================
# Raspberry Pi Cluster - Environment Configuration
# ============================================================
PROFILE=dev

# Database (adjust host if PostgreSQL runs on a different Pi)
DB_HOST=pi-db.local
DB_PORT=5432
DB_NAME=portfolio_dev
DB_USERNAME=portfolio
DB_PASSWORD=portfolio

# Ports
API_PORT=8080
UI_PORT=80
BATCH_PORT=8082

# Security
JWT_SECRET=rpi-cluster-secret-change-this-in-production

# CORS
CORS_ORIGINS=http://pi-1.local,http://pi-1.local:3000

# Spark (reduced memory for Pi hardware)
SPARK_MASTER=local[2]
SPARK_DRIVER_MEMORY=512m
SPARK_EXECUTOR_MEMORY=512m
