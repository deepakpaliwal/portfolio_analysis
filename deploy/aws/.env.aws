# ============================================================
# AWS Deployment - Environment Configuration
# Values should reference Secrets Manager / Parameter Store in production.
# ============================================================
PROFILE=prod

# Database (RDS endpoint)
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=5432
DB_NAME=portfolio_prod
DB_USERNAME=portfolio
DB_PASSWORD=<from-secrets-manager>

# Ports
API_PORT=8080
UI_PORT=80
BATCH_PORT=8082

# Security
JWT_SECRET=<from-secrets-manager>

# CORS (ALB/CloudFront domain)
CORS_ORIGINS=https://your-domain.com

# Spark (Fargate local mode)
SPARK_MASTER=local[*]
SPARK_DRIVER_MEMORY=1g
SPARK_EXECUTOR_MEMORY=1g
